# Server Configuration
SERVER_PORT=8080
SERVER_MODE=development  # development, staging, production
SERVER_HOST=localhost

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=vulnpilot
DB_PASSWORD=your_secure_password_here
DB_NAME=vulnpilot_db
DB_SSLMODE=disable
DB_TIMEZONE=UTC

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=168h  # 7 days

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:8080/api/auth/github/callback

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# AI Services
GEMINI_API_KEY=your_gemini_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@vulnpilot.com
EMAIL_ENABLED=true

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_ENABLED=false

# Security Scanning Tools Paths
NMAP_PATH=/usr/bin/nmap
NIKTO_PATH=/usr/bin/nikto
GOBUSTER_PATH=/usr/bin/gobuster
SQLMAP_PATH=/usr/bin/sqlmap
WPSCAN_PATH=/usr/bin/wpscan

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15m

# Logging
LOG_LEVEL=info  # debug, info, warn, error
LOG_FORMAT=json  # json, text
LOG_FILE=logs/vulnpilot.log

# Session
SESSION_TIMEOUT=24h
SESSION_REFRESH_INTERVAL=1h